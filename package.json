{
  "name": "asterics-grid-android",
  "version": "1.0.0",
  "description": "AsTeRICS-Grid with offline Piper TTS for Android",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run copy:asterics",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.vue --fix",
    "format": "prettier --write \"src/**/*.{ts,vue,css}\"",
    "type-check": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build && npm run android:sync && cd android && ./gradlew assembleRelease",
    "android:run": "npm run build && npm run android:sync && cd android && ./gradlew installDebug",
    "capacitor:add": "npx cap add android",
    "copy:asterics": "node scripts/copy-asterics-grid.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@capacitor/android": "^6.1.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.1.0",
    "@capacitor/filesystem": "^6.0.0",
    "axios": "^1.6.0",
    "idb": "^8.0.0",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.0",
    "@types/jest": "^29.5.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.20.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "terser": "^5.44.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "asterics-grid",
    "aac",
    "assistive-technology",
    "tts",
    "piper",
    "android",
    "capacitor"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/asterics-grid-android"
  }
}
